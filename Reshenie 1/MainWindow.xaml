<Window x:Class="Reshenie_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reshenie_1"
        mc:Ignorable="d"
        Title="Прагающие кнопки" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged">
    <Canvas MouseDown="Canvas_MouseDown" Background="White">
        <Button x:Name="button1" Content="Закрыть" Canvas.Left="10" Canvas.Top="10" Width="75" Click="button1_Click"/>
        <Button x:Name="button2" Content="" Canvas.Left="90" Canvas.Top="10" Width="75" Click="button2_Click" MouseMove="button2_MouseMove"/>
    </Canvas>
</Window>
